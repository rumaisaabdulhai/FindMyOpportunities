<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DisplayOpportunityActivity"
    android:orientation="vertical"
    android:padding="15dp">

    <!--    TITLE LAYOUT    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Title Label of the Opportunity -->
        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title:  "
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Title Text of the Opportunity -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title Text"
            android:textColor="#456"
            android:textSize="30sp"
            android:textStyle="normal" />
    </LinearLayout>

    <!--    DESCRIPTION LAYOUT    -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Description Label of the Opportunity -->
        <TextView
            android:id="@+id/Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:  "
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Description Text of the Opportunity -->
        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Text"
            android:textColor="#456"
            android:textSize="30sp"
            android:textStyle="normal" />
    </LinearLayout>

    <!--    ORGANIZER LAYOUT    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Organizer Label of the Opportunity -->
        <TextView
            android:id="@+id/Organizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer:  "
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Organizer Text of the Opportunity -->
        <TextView
            android:id="@+id/organizerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Organizer Text"
            android:textColor="#456"
            android:textSize="30sp"
            android:textStyle="normal" />
    </LinearLayout>


    <!--    LOCATION LAYOUT    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <!-- Location Label of the Opportunity -->
        <TextView
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:  "
            android:textColor="#3F51B5"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Location Text of the Opportunity -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Location Text"
            android:textColor="#456"
            android:textSize="30sp"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>